{
  "name": "tape-moonbeam",
  "version": "0.6.0",
  "description": "tape extension that spins up and connects to moonbeam dev chains",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuggetdigital/tape-moonbeam.git"
  },
  "keywords": [
    "moonbeam",
    "tape",
    "testing",
    "blockchain",
    "substrate"
  ],
  "author": "Noah Anabiik Schwarz <noah.anabiik.schwarz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuggetdigital/tape-moonbeam/issues"
  },
  "homepage": "https://github.com/nuggetdigital/tape-moonbeam#readme",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "bin": {
    "tape-moonbeam": "./bin/tape-moonbeam"
  },
  "scripts": {
    "fmt": "npx prettier --no-semi --arrow-parens avoid --trailing-comma none --print-width 80 --write './**/*.js'",
    "test": "node ./test/test.js"
  },
  "dependencies": {
    "@polkadot/api": "3.10.2",
    "duplexify": "4.1.1",
    "moonbeam-binary": "nuggetdigital/moonbeam-binary#v0.6.0",
    "nanoassert": "2.0.0",
    "newline-decoder": "1.0.0",
    "solc": "0.8.1",
    "tape": "5.1.1",
    "web3": "1.3.4"
  },
  "tape-moonbeam": {
    "execPath": null,
    "port": 19419,
    "rpcPort": 19420,
    "wsPort": 19421,
    "maxStartMs": 3000,
    "argv": [
      "--execution=Native",
      "--no-telemetry",
      "--no-prometheus",
      "--dev",
      "--sealing=manual",
      "--port=19419",
      "--rpc-port=19420",
      "--ws-port=19421",
      "--tmp"
    ]
  }
}
